{
  "$schema": "https://schemas.wp.org/trunk/block.json",
  "apiVersion": 3,
  "name": "pavel/home-statistics-showcase",
  "version": "0.1.0",
  "title": "Statistics Showcase",
  "category": "widgets",
  "description": "Display professional statistics and achievements with numbers and descriptions.",
  "attributes": {
    "blockId": {
      "type": "string",
      "default": ""
    },
    "stats": {
      "type": "array",
      "default": [],
      "items": {
        "type": "object",
        "default": {
          "number": "",
          "unit": "",
          "description": ""
        }
      }
    }
  },
  "supports": {
    "html": true,
    "typography": {
      "fontSize": false,
      "lineHeight": false
    },
    "spacing": {
      "padding": false,
      "margin": false
    },
    "color": {
      "background": false,
      "gradients": false,
      "text": false
    }
  },
  "textdomain": "pm",
  "editorScript": "file:./index.js",
  "editorStyle": "file:./index.css",
  "style": "file:./style-index.css",
  "render": "file:./render.php"
}
