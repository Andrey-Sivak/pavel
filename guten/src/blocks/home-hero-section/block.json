{
  "$schema": "https://schemas.wp.org/trunk/block.json",
  "apiVersion": 3,
  "name": "pavel/home-hero-section",
  "version": "0.1.0",
  "title": "Home Hero Section",
  "category": "widgets",
  "description": "A prominent hero section featuring a title, text, and image.",
  "attributes": {
    "title": {
      "type": "string",
      "default": ""
    },
    "subtitle": {
      "type": "string",
      "default": ""
    },
    "button": {
      "type": "object",
      "default":  {
        "text": "",
        "url": "",
        "target": ""
      }
    },
    "image": {
      "type": "object",
      "default": {
        "id": null,
        "url": ""
      }
    }
  },
  "supports": {
    "html": true,
    "typography": {
      "fontSize": false,
      "lineHeight": false
    },
    "spacing": {
      "padding": false,
      "margin": false
    },
    "color": {
      "background": false,
      "gradients": false,
      "text": false
    }
  },
  "textdomain": "pm",
  "editorScript": "file:./index.js",
  "editorStyle": "file:./index.css",
  "style": "file:./style-index.css",
  "render": "file:./render.php"
}
