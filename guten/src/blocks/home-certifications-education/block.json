{
  "$schema": "https://schemas.wp.org/trunk/block.json",
  "apiVersion": 3,
  "name": "pavel/home-certifications-education",
  "version": "0.1.0",
  "title": "Certifications & Education",
  "category": "widgets",
  "description": "Display professional certifications and educational qualifications with logos and descriptions.",
  "attributes": {
    "heading": {
      "type": "string",
      "default": ""
    },
    "credentials": {
      "type": "array",
      "default": [],
      "items": {
        "type": "object",
        "default": {
          "logo": {
            "id": null,
            "url": ""
          },
          "title": "",
          "status": "",
          "description": "",
          "institution": ""
        }
      }
    }
  },
  "supports": {
    "html": true,
    "typography": {
      "fontSize": false,
      "lineHeight": false
    },
    "spacing": {
      "padding": false,
      "margin": false
    },
    "color": {
      "background": false,
      "gradients": false,
      "text": false
    }
  },
  "textdomain": "pm",
  "editorScript": "file:./index.js",
  "editorStyle": "file:./index.css",
  "style": "file:./style-index.css",
  "render": "file:./render.php"
}
